{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://fkg.schema/v0.1/entity.organization.json",
  "title": "Organization Entity",
  "description": "An organization providing services or resources",
  "type": "object",
  "required": ["id", "type", "name"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this entity"
    },
    "type": {
      "type": "string",
      "const": "organization"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Name of the organization"
    },
    "description": {
      "type": "string",
      "description": "Description of the organization"
    },
    "jurisdiction": {
      "type": "string",
      "description": "Geographic jurisdiction"
    },
    "identifiers": {
      "type": "object",
      "description": "External identifiers",
      "properties": {
        "ein": {
          "type": "string",
          "description": "IRS Employer Identification Number"
        },
        "npi": {
          "type": "string",
          "description": "National Provider Identifier"
        },
        "license": {
          "type": "string",
          "description": "License number"
        }
      },
      "additionalProperties": {
        "type": "string"
      }
    },
    "contact": {
      "type": "object",
      "properties": {
        "phone": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "address": {
      "type": "object",
      "properties": {
        "street": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "postal_code": {
          "type": "string"
        },
        "country": {
          "type": "string",
          "default": "US"
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Categorization tags"
    },
    "provenance": {
      "type": "object",
      "properties": {
        "source_ids": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    }
  },
  "additionalProperties": true
}
