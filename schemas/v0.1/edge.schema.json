{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://fkg.schema/v0.1/edge.schema.json",
  "title": "Edge Schema",
  "description": "A relationship edge between two entities",
  "type": "object",
  "required": ["id", "type", "src_id", "dst_id"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this edge"
    },
    "type": {
      "type": "string",
      "enum": [
        "ORG_OFFERS_SERVICE",
        "ORG_HAS_LOCATION",
        "SERVICE_AT_LOCATION",
        "PERSON_WORKS_AT_ORG",
        "PERSON_MANAGES_SERVICE",
        "ORG_PARTNERS_WITH",
        "SERVICE_REQUIRES_SERVICE",
        "LOCATION_NEAR_LOCATION"
      ],
      "description": "Type of relationship"
    },
    "src_id": {
      "type": "string",
      "description": "Source entity ID"
    },
    "dst_id": {
      "type": "string",
      "description": "Destination entity ID"
    },
    "properties": {
      "type": "object",
      "description": "Additional edge properties",
      "properties": {
        "role": {
          "type": "string",
          "description": "Role in the relationship"
        },
        "start_date": {
          "type": "string",
          "format": "date"
        },
        "end_date": {
          "type": "string",
          "format": "date"
        },
        "notes": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "provenance": {
      "type": "object",
      "properties": {
        "source_ids": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    }
  },
  "additionalProperties": true
}
