{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://fkg.schema/v0.1/entity.person.json",
  "title": "Person Entity",
  "description": "A person associated with an organization or service",
  "type": "object",
  "required": ["id", "type", "name"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this entity"
    },
    "type": {
      "type": "string",
      "const": "person"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Full name of the person"
    },
    "description": {
      "type": "string",
      "description": "Role or description"
    },
    "title": {
      "type": "string",
      "description": "Job title or position"
    },
    "contact": {
      "type": "object",
      "properties": {
        "phone": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Categorization tags"
    },
    "provenance": {
      "type": "object",
      "properties": {
        "source_ids": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    }
  },
  "additionalProperties": true
}
