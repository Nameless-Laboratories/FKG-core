{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://fkg.schema/v0.1/entity.service.json",
  "title": "Service Entity",
  "description": "A service provided by an organization",
  "type": "object",
  "required": ["id", "type", "name"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this entity"
    },
    "type": {
      "type": "string",
      "const": "service"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Name of the service"
    },
    "description": {
      "type": "string",
      "description": "Description of the service"
    },
    "jurisdiction": {
      "type": "string",
      "description": "Geographic area served"
    },
    "category": {
      "type": "string",
      "description": "Service category (e.g., food, housing, healthcare)"
    },
    "eligibility": {
      "type": "object",
      "description": "Eligibility requirements",
      "properties": {
        "description": {
          "type": "string"
        },
        "age_min": {
          "type": "integer"
        },
        "age_max": {
          "type": "integer"
        },
        "income_limit": {
          "type": "string"
        },
        "residency_required": {
          "type": "boolean"
        }
      }
    },
    "schedule": {
      "type": "object",
      "description": "Service availability",
      "properties": {
        "hours": {
          "type": "string"
        },
        "days": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "contact": {
      "type": "object",
      "properties": {
        "phone": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "fees": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "string"
        },
        "sliding_scale": {
          "type": "boolean"
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Categorization tags"
    },
    "provenance": {
      "type": "object",
      "properties": {
        "source_ids": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    }
  },
  "additionalProperties": true
}
